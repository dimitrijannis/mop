naam = input("Wat is je naam? ")
def greet(naam):
  print("Hallo, " + naam + "!")

greet (naam)

leeftijd = input("Hoe oud ben je? ")
def age(leeftijd):
  if int(leeftijd) < 18:
    print("amai, " + str(leeftijd) + " dat is nog jong!")
  else: 
    print("Jij bent al oud")
age(leeftijd)
